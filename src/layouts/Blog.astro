---
import type { MarkdownLayoutProps } from "astro";
import Main from "./Main.astro";

type Props = MarkdownLayoutProps<{
    title: string;
    subtitle: string;
    poster: string;
}>;

const { title, subtitle, poster } = Astro.props.frontmatter;
---

<Main title="Lilly Nguyen | Favorite Things">
    <h1>{title}</h1>
    <h2>{subtitle}</h2>

    <figure class="figure">
        <img src={poster} alt="" height="400px" class="figure__image" />
        <figcaption>
            Poster image for {title.toLowerCase()}
        </figcaption>
    </figure>

    <slot />
</Main>